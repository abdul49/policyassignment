{
  "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "policyAssignments": {
      "type": "array",
      "metadata": {
        "description": "List of Assignments"
      }
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location for Identity"
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Authorization/policyAssignments",
      "apiVersion": "2022-06-01",
      "name": "[parameters('policyAssignments')[copyIndex()].name]",
      "copy": {
        "name": "AssignmentCopy",
        "count": "[length(parameters('policyAssignments'))]"
      },
      "properties": {
        "displayName": "[parameters('policyAssignments')[copyIndex()].displayName]",
        "policyDefinitionId": "[parameters('policyAssignments')[copyIndex()].policyDefinitionId]",
        "parameters": "[parameters('policyAssignments')[copyIndex()].parameters]",
        "notScopes": "[parameters('policyAssignments')[copyIndex()].notScopes]"
      },
      "location": "[parameters('location')]",
      "identity": "[if(empty(parameters('policyAssignments')[copyIndex()].uami),json('{\"type\": \"SystemAssigned\"}'),json(concat('{\"type\": \"UserAssigned\",\"userAssignedIdentities\": {\"',parameters('policyAssignments')[copyIndex()].uami,'\": {}}}')))]"
    }
  ]
}
